<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>Avalonia</RootNamespace>
	<Nullable>enable</Nullable>
	<OutputType>Exe</OutputType>
    <DefineConstants>TRACE;BOXING</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\NonBoxingValueStore\Benchmarks\**\*.cs">
	  <Link>Benchmarks\%(RecursiveDir)%(Filename)%(Extension)</Link>
	</Compile>
	  <Compile Include="..\NonBoxingValueStore\Tests\**\*.cs">
		  <Link>Tests\%(RecursiveDir)%(Filename)%(Extension)</Link>
	  </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\NonBoxingValueStore\PropertyStore\IValue.cs" Link="PropertyStore\IValue.cs" />
    <Compile Include="..\NonBoxingValueStore\PropertyStore\IValueFrame.cs" Link="PropertyStore\IValueFrame.cs" />
    <Compile Include="..\NonBoxingValueStore\Styling\Setter.cs" Link="Styling\Setter.cs" />
    <Compile Include="..\NonBoxingValueStore\Styling\Style.cs" Link="Styling\Style.cs" />
    <Compile Include="..\NonBoxingValueStore\Styling\StyleInstance.cs" Link="Styling\StyleInstance.cs" />
  </ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.13.0" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Avalonia.Base\Avalonia.Base.csproj" />
  </ItemGroup>

</Project>
